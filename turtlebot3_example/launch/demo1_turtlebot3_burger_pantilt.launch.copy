<launch>
	<arg name="model" default="burger"/>
	<arg name="option" default="_puntilt_XM430" doc="support option [_puntilt_XM430, _puntilt_2XL430]"/>
	<arg name="lds_model" default="LDS-02"/>
	<!-- <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi, pizza, big_wheel]"/>
  	<arg name="lds_model" default="$(env LDS_MODEL)" doc="LDS MODEL [LDS-01, LDS-02]"/> --> <!-- 未対応 -->
	<arg name="x_pos" default="0"/>
	<arg name="y_pos" default="0"/>
	<arg name="z_pos" default="0.5"/>

	<!--<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/turtlebot3_hole_stage.world"/>-->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/turtlebot3_jp_world_ped_horizontal.world"/>
		<arg name="paused" value="false"/>
		<arg name="use_sim_time" value="true"/>
		<arg name="gui" value="true"/>
		<arg name="headless" value="false"/>
		<arg name="debug" value="false"/>
	</include>
 
	<param name="robot_description" command="$(find xacro)xacro $(find turtlebot3_description)/urdf/turtlebot3_$(arg model)$(arg option).urdf.xacro --inorder" />
    
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
	<node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />

	<!-- パンチルトを動かすためのノードを起動 -->
	<!-- ここはpuntilt機構に特有なので config_{model}_pantilt.yml みたいな形にして外に出すべきかも -->
   <rosparam>
    puntilt_controller:      
       type: position_controllers/JointTrajectoryController
       joints: 
         - base_puntilt_joint
         - base_realsense_joint
   </rosparam>
   <node name = "controller_spawner" pkg = "controller_manager" type = "spawner" args = "puntilt_controller"/>

	<!-- 確認用の rviz -->
	<include file="$(find turtlebot3_description)/launch/display_robot_in_rviz.launch" />

	<!-- demo用の動作コマンドをpubするノード -->
	<node pkg="turtlebot3_example" type="turtlebot3_burger_puntilt_demo1" name="turtlebot3_burger_puntilt_demo1"/>
</launch>
